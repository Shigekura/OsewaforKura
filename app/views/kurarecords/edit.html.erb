<div class="text-center">
  <h3>お世話記録修正</h3>
</div>
<div class="row">
  <div class="col-sm-6 offset-sm-3">
      <%= form_with(model: @kurarecord, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :clock, 'お世話時刻' %>
          <%= f.datetime_local_field :clock, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :feed, '餌摂取量(g)' %>
          <%= f.number_field :feed, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content, 'その他のお世話' %>
          <%= f.text_area :content, class: 'form-control', rows: 3 %>
        </div>
        <%= f.submit 'お世話記録修正', class: 'btn btn-warning btn-block' %>
      <% end %>
  </div>
</div>